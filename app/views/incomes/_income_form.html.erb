<%= form_for(@income) do |f| %>
	
	<%= f.label :name %>
	<%= f.text_field :name, class: "form-control" %>

	<%= f.label :amount, value: "Net Amount" %> (<%= @user.primary_currency%>)
	<small>- The take home pay after taxes etc.</small>
	<%= f.number_field :amount, step: 0.01, min: 0, class: "form-control" %>

	<%= f.label :date %>
	<%= f.date_field :date, class: "form-control" %>

	<%= f.label "Regular?" %>
	<br><small>*set as standard for all months</small>
	<%= f.check_box :regular, class: "form-control", checked: "checked" %>

	<%= f.submit %>
<% end %>