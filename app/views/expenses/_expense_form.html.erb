<%= form_for(@expense) do |f| %>
	
	<%= f.label :name %>
	<%= f.text_field :name, class: "form-control" %>

	<%= f.label :amount %> (<%= @user.primary_currency%>)
	<%= f.number_field :amount, step: 0.01, min: 0, class: "form-control" %>

	<%= f.label :category %>
	<br>
	<%= f.select :category, ["Bills",
													 "Dining/drinking",
													 "Enjoyment",
													 "Family",
													 "Groceries",
													 "Home",
													 "Transport",
													 "Other"],
													 disabled: 'Please select',
													 prompt: 'Please select',
													 class: "form-control" %>
	<br>												 

	<%= f.label :date %>
	<%= f.date_field :date, class: "form-control" %>

	<%= f.label "Repeats next month?" %>
	<%= f.check_box :regular, class: "checkbox inline", checked: "checked" %>

	<%= f.submit %>
<% end %>