<h2>Your monthly entries</h2>
<h3>Your monthly spending budget is <%= @currency %><%= @user.disposable_income(current_user) %> - <%= ((@user.disposable_income(current_user) / @user.recurring_incomes(current_user))*100).round(1) %>% of total income</h3>
<h3>Incomes - <%= @currency %><%= @user.recurring_incomes(current_user) %></h3>
<% if @incomes.empty? %>
	<p>You haven't added any incomes yet!</p>
	<%= link_to "Add you first income entry", new_user_income_path(current_user)%>
<% else %>
	<table>
		<tr>
			<th>Name</th>
			<th>Amount</th>
			<th>Category</th>
			<th>Date</th>
			<th>Regular?</th>
			<th>Share of Total Income</th>
		</tr>
	<% @incomes.each do |income| %>
		<tr>
			<td><%= income.name %></td>
			<td><%= @currency %><%= income.amount %></td>
			<td><%= income.category %></td>
			<td><%= income.date %></td>
			<td><%= income.regular %></td>
			<td><%= ((income.amount / @user.recurring_incomes(current_user))*100).round(1) %>%</td>
			<td><%= link_to "Edit entry", edit_user_income_path(current_user, income) %></td>
			<td><%= link_to "Delete", income, method: :delete,
							data: { confirm: "Are you sure you want to delete this entry?" }%></td>
		</tr>
	<% end %>
	</table>
	<%= link_to "Add additional incomes", new_user_income_path(current_user)%>
<% end %>

