<%= form_for(@income) do |f| %>
	
	<%= f.label :name %>
	<%= f.text_field :name, class: "form-control" %>

	<%= f.label :amount %>
	<%= f.number_field :amount, step: 0.01, min: 0, class: "form-control" %>

	<%= f.label :category %>
	<%= f.text_field :category, class: "form-control" %>

	<%= f.label :date %>
	<%= f.date_field :date, class: "form-control", value: Date.today %>

	<%= f.label "Regular?" %>
	<%= f.check_box :regular, class: "form-control", checked: "checked" %>

	<%= f.submit %>
<% end %>